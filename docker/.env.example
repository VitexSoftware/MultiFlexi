# Database Configuration
DB_CONNECTION=mysql
DB_HOST=db
DB_DATABASE=multiflexi
DB_USERNAME=multiflexiuser
DB_PASSWORD=secure_user_password
MYSQL_ROOT_PASSWORD=very_secure_root_password

# Web Configuration
WEB_PORT=8080

# Optional: Database port exposure (set to empty to disable)
DB_PORT=3306

# MultiFlexi Configuration
MULTIFLEXI_LOG_LEVEL=info
MULTIFLEXI_DEBUG=false

# Analytics Configuration
# Enable Google Analytics (set to true only if you want to use Google Analytics)
# When false, use self-hosted analytics like Matomo or AWStats instead
ENABLE_GOOGLE_ANALYTICS=false

# OpenTelemetry Configuration
# Enable OpenTelemetry metrics export
OTEL_ENABLED=false
OTEL_SERVICE_NAME=multiflexi
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
OTEL_EXPORTER_OTLP_PROTOCOL=http/json
# For gRPC use:
# OTEL_EXPORTER_OTLP_PROTOCOL=grpc
# OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317

# Timezone
TZ=Europe/Prague
