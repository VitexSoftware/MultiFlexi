{
    "$schema": "https://raw.githubusercontent.com/VitexSoftware/php-vitexsoftware-multiflexi-core/refs/heads/main/multiflexi.app.schema.json",
    "image": "",
    "name": "MultiFlexi Probe",
    "description": "Task launcher testing tool",
    "executable": "multiflexi-probe",
    "setup": "ls -la {FILE_UPLOAD}",
    "requirements": [
        "Probe",
        "mServer",
        "SQLServer",
        "RaiffeisenBank",
        "Office365",
        "FioBank",
        "AbraFlexi",
        "EnvFile",
        "VaultWarden",
        "Csas"
    ],
    "cmdparams": "{FILE_UPLOAD}",
    "deploy": "sudo apt install multiflexi",
    "homepage": "https://github.com/VitexSoftware/MultiFlexi",
    "ociimage": "docker.io/vitexsoftware/multiflexi-probe",
    "uuid": "775ed801-2489-4981-bc14-d8a01cba1938",
    "topics": [
        "MultiFlexi",
        "probe",
        "task launcher",
        "testing",
        "tool"
    ],
    "version": "2.0.0",
    "environment": {
        "FILE_UPLOAD": {
            "type": "file-path",
            "description": "Testing file upload field",
            "defval": "\/etc\/fstab",
            "required": true
        },
        "PASSWORD": {
            "type": "password",
            "description": "An example of secret",
            "defval": "donotcare",
            "required": false
        },
        "APP_DEBUG": {
            "type": "bool",
            "description": "Show debug messages",
            "defval": "False",
            "required": true
        },
        "RESULT_FILE": {
            "type": "string",
            "description": "write output json data to",
            "defval": "env_report.json",
            "required": false
        }, 
        "FORCE_EXITCODE": {
            "type": "integer",
            "description": "Force exit code",
            "defval": "0",
            "required": false
        },
        "ZABBIX_KEY": {
            "type": "string",
            "description": "Default name for Zabbix Item key name",
            "defval": "multiflexi-probe-{PASSWORD}",
            "required": false
        }
    },
    "multiflexi": "2.0.0",
    "artifacts": [
        {
            "name": "env_report.json",
            "path": "env_report.json",
            "type": "file",
            "description": "Output JSON data file generated by the probe."
        }
    ]
}
