    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch built-in server and debug",
            "type": "php",
            "request": "launch",
            "runtimeArgs": [
                "-S",
                "localhost:8000",
                "-t",
                "src/"
            ],
            "port": 9003,
            "serverReadyAction": {
                "action": "openExternally"
            },
            "pathMappings": {
                "/home/vitex/Projects/MultiFlexi/": "${workspaceRoot}"
            }
        },
        {
            "name": "Debug current script in console",
            "type": "php",
            "request": "launch",
            "program": "${file}",
            "cwd": "${fileDirname}",
            "externalConsole": false,
            "port": 9003
        },
        {
            "name": "Launch daily script in console ",
            "type": "php",
            "request": "launch",
            "program": "${fileWorkspaceFolder}/lib/executor.php",
            "cwd": "${fileWorkspaceFolder}/lib/",
            "externalConsole": false,
            "port": 9003,
            "args": [
                "d"
            ]
        },
        {
            "name": "Launch weekly script in console ",
            "type": "php",
            "request": "launch",
            "program": "${fileWorkspaceFolder}/lib/executor.php",
            "cwd": "${fileWorkspaceFolder}/lib/",
            "externalConsole": false,
            "port": 9003,
            "args": [
                "w"
            ]
        },

        {
            "name": "Debug Database Migration",
            "type": "php",
            "request": "launch",
            "program": "${fileWorkspaceFolder}/vendor/bin/phinx",
            "cwd": "${fileWorkspaceFolder}/src/",
            "externalConsole": false,
            "port": 9003,
            "args": [
                "migrate",
                "-c",
                "../phinx-adapter.php"
            ]
        },
        {
            "name": "Listen for Xdebug",
            "type": "php",
            "request": "launch",
            "port": 9003,
            "args": []

        }
    ]
}